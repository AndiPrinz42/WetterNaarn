---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="404 Nicht gefunden | Wetter Naarn">
    <div id="content">
        <div id="text">Diese Seite wurde nicht gefunden</div>
        <a href="/">
            <div id="action">Zur√ºck zur Startseite</div>
        </a>
    </div>
</Layout>

<style lang="scss">
@use "../../styles/mixins" as global;

#content {
    padding: 0.5em 2em 1.2em 2em;
    height: calc(100vh - 1.7em);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

    @media (max-width: 1250px) {
        margin-left: 0;
        margin-top: 3.75em;
        height: calc(100vh - 3.75em - 1.7em);
    }

    @media (max-width: 420px) {
        padding: 0.5em 1em 1.2em 1em;
    }

    @media (max-width: 310px) {
        padding: 0.5em 0.2em 1.2em 0.1em;
    }

    #text {
        font-size: 2em;
        margin-bottom: .5em;
        text-align: center;
        text-wrap: balance;
        @media (max-width: 320px) {
            font-size: 1.5em;
        }
    }

    #action {
        background-color: #000000;
        color: #ffffff;
        padding: 1em;
        border-radius: 0.3em;
        transition: background-color 0.25s ease-in-out;
        cursor: pointer;
        @include global.disableSelect;
        @media (max-width: 320px) {
            padding: 0.75em;
        }
        &:hover {
            background-color: #181818;
        }
    }
}

a {
    text-decoration: none;
}
</style>
