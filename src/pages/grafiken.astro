---
import Layout from "../layouts/Layout.astro";
import Graphs from "../components/Graphs.vue";
---

<Layout
  title="Grafiken | Wetter Naarn"
  description="Analysiere vergangene Jahre mit präzisen Grafiken und erhalte faszinierende Einblicke in Naarns Langzeit-Wettertrends - von Temperaturverläufen bis zu Niederschlagsdaten."
  keywords="Wetter, Naarn im Machlande, Grafiken, Graphen, Verlauf, Langzeitwerte, Wetterhistorie"
  ogTitle="Wetter Naarn | Grafiken"
  ogDescription="Präzise Grafiken über die Daten der letzten Jahre aus Naarn - von Temperaturverläufen bis zu Niederschlagsdaten."
  ogImage="https://wetter-naarn.at/assets/icons/logo/og-image.png"
  ogUrl="https://wetter-naarn.at/grafiken"
>
  <Graphs client:load />
</Layout>

<style lang="scss" is:inline>
  .v-chip {
    width: 100%;
  }

  .v-chip__content {
    color: #000000;
  }

  .dp__input {
    height: 3.5em;
  }

  .v-input__details {
    display: none;
  }

  .v-checkbox-btn {
    margin-left: 0.5em;
  }

  .v-label {
    width: 100%;
    opacity: 1;
  }
</style>
