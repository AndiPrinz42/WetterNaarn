              "
          [iconAlt]="'Luftdruck Max Icon'"></app-widget-detail-sensor-static>
      </div>
    </section>

    <section>
      <h2>Wind</h2>
      <div class="row">
        <app-widget-detail-sensor-rotateable
          class="sensor"
          [name]="'Aktuell'"
          [text]="'Ø ' + data.wind.avg + 'km/h'"
          [value]="data.wind.current + 'km/h'"
          [icon]="'/assets/icons/meteocons/rotateable/windcompass.svg'"
          [rotation]="data.wind.currentDir"
        ></app-widget-detail-sensor-rotateable>
        <app-widget-detail-sensor-rotateable
          class="sensor"
          [name]="'Max'"
          [value]="data.wind.max + 'km/h'"
          [text]="data.wind.maxTime"
          [icon]="'/assets/icons/meteocons/rotateable/windcompass.svg'"
