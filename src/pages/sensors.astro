---
import Layout from "../layouts/Layout.astro";
import DetailSensorWidget from "../components/DetailSensorWidget.astro";
const data = {
  outTemp: {
    current: 20.5,
    avg: 20.5,
    min: 20.5,
    minTime: "00:00",
    max: 20.5,
    maxTime: "00:00",
  },
  appTemp: {
    current: 20.5,
    avg: 20.5,
    min: 20.5,
    minTime: "00:00",
    max: 20.5,
    maxTime: "00:00",
  },
  dewpoint: {
    current: 20.5,
    avg: 20.5,
    min: 20.5,
    minTime: "00:00",
    max: 20.5,
    maxTime: "00:00",
  },
  outHumidity: {
    current: 20.5,
    avg: 20.5,
    min: 20.5,
    minTime: "00:00",
    max: 20.5,
    maxTime: "00:00",
  },
  barometer: {
    current: 20.5,
    avg: 20.5,
    min: 20.5,
    minTime: "00:00",
    max: 20.5,
    maxTime: "00:00",
  },
  wind: {
    current: 20.5,
    avg: 20.5,
    max: 20.5,
    maxTime: "00:00",
    maxDir: 20.5,
    maxGust: 20.5,
    maxGustTime: "00:00",
    maxGustDir: 20.5,
  },
  rain: {
    day: 20.5,
    week: 20.5,
    weekBefore: 20.5,
    month: 20.5,
    monthBefore: 20.5,
    last: "00:00",
  },
  suntoday: {
    sunrise: "00:00",
    sunset: "00:00",
  },
  suntomorrow: {
    sunrise: "00:00",
    sunset: "00:00",
  },
  daylength: "00:00",
  daylengthdiff: "00:00",
  moon: {
    illumination: 20.5,
  },
};
---

<Layout title="Sensoren | Wetter Naarn">
  <div id="content">
    <section>
      <h2>Temperatur</h2>
      <div class="row">
        <div class="sensor">
          <DetailSensorWidget
            name="Aktuell"
            text="Ø 20.5°"
            value="20.5°"
            icon="assets/icons/meteocons/static/sensors/thermometer/thermometer.svg"
            iconAlt="Temperatur Icon"
          />
        </div>

        <div class="sensor">
          <DetailSensorWidget
            name="Min"
            value="20.5°"
            text="00:00"
            icon="assets/icons/meteocons/static/sensors/thermometer/thermometer-colder.svg"
            iconAlt="Temperatur Min Icon"
          />
        </div>

        <div class="sensor">
          <DetailSensorWidget
            name="Max"
            value="20.5°"
            text="00:00"
            icon="assets/icons/meteocons/static/sensors/thermometer/thermometer-warmer.svg"
            iconAlt="Temperatur Max Icon"
          />
        </div>
      </div>

