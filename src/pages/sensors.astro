<style lang="scss">
  #content {
    padding: 0.5em 2em 1.2em 2em;
    min-height: calc(100vh - 1.7em);
    @media (max-width: 1250px) {
      margin-left: 0;
      margin-top: 3.75em;
    }
    @media (max-width: 420px) {
      padding: 0.5em 1em 1.2em 1em;
    }
    .widget {
      padding: 1.5em;
      border-radius: 1em;
    }
    h2 {
      font-size: 2em;
      font-weight: 500;
      margin-bottom: 0.2em;
    }
    section {
      margin-bottom: 1em;
    }
    .row {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      @media (max-width: 950px) {
        flex-direction: column;
      }
      .sensor {
        // padding: 1.5em;
        border-radius: 1em;
        flex: 1;
        margin-right: 1.5em;
        @media (max-width: 950px) {
          margin-bottom: 1.5em;
          width: 100%;
        }
      }
      .sensor:last-child {
        margin-right: 0;
      }
    }
  }
</style>
